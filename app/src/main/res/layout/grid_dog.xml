<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/grid_dog_photo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="-120dp"
       />

    <TextView
        android:id="@+id/grid_dog_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:text="Dog Name"
        android:textSize="30dp"
        android:textColor="@color/abc_input_method_navigation_guard" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="19"
        android:layout_marginLeft="-30dp"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:id="@+id/dog_adoptdetail_age" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Months"
        android:layout_marginTop="-24dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:id="@+id/dog_123" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Male"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:id="@+id/dog_adoptdetail_gender" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Yes"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:id="@+id/dog_adoptdetail_vac" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Terrier"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:id="@+id/dog_adoptdetail_Breed" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Large Text"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:id="@+id/dog_adoptdetail_description" />


</LinearLayout>